{
  "name": "json-tree-view",
  "displayName": "JSON Tree View",
  "description": "Generate a tree view from json file",
  "icon": "images/icon.png",
  "version": "3.0.0",
  "publisher": "ChaunceyKiwi",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "jsonTreeView",
          "name": "Json Tree View",
          "when": "jsonTreeViewEnabled"
        }
      ]
    },
    "commands": [
      {
        "command": "jsonTreeView.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "jsonTreeView.refreshNode",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "jsonTreeView.renameNode",
        "title": "Rename"
      },
      {
        "command": "jsonTreeView.revealNode",
        "title": "Reveal"
      },
      {
        "command": "jsonTreeView.revealNodeWithKey",
        "title": "RevealWithKey"
      },
      {
        "command": "extension.openJsonSelection",
        "title": "Open JSON Selection"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "jsonTreeView.refresh",
          "when": "view == jsonTreeView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "jsonTreeView.revealNode",
          "when": "view == jsonTreeView"
        },
        {
          "command": "jsonTreeView.revealNodeWithKey",
          "when": "view == jsonTreeView"
        }
      ]
    },
    "configuration": [
      {
        "title": "JSON Tree View",
        "properties": {
          "jsonTreeView.autorefresh": {
            "type": "boolean",
            "default": true
          },
          "jsonTreeView.customizedViewActivated": {
            "type": "boolean",
            "default": true
          },
          "jsonTreeView.customizedViewMapping": {
            "type": "object"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "jsonc-parser": "^3.2.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChaunceyKiwi/json-tree-view"
  }
}
